{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/dedis/hbt/main/protocole/transaction.json",
  "title": "transaction message",
  "description": "Content of a transaction message",
  "type": "object",
  "properties": {
    "datetime": {
      "description": "UNIX Timestamp in UTC of this transaction",
      "type": "integer",
      "minimum": 0
    },
    "source": {
      "description": "Source of the transaction",
      "type": "string"
    },
    "destination": {
      "description": "Destination of the transaction",
      "type": "string"
    },
    "amount": {
      "description": "Amount of the transaction",
      "type": "integer"
    }
  }
}